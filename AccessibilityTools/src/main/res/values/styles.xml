<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TxtTitle" parent="WrapContent">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="TxtSubTitle" parent="TxtTitle">
        <item name="android:textSize">10dp</item>
    </style>
    <style name="AlertButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_btn_alert_common</item>
    </style>
    <style name="AlertEditText" parent="WrapContent">
        <item name="android:layout_width">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">8dp</item>
        <item name="android:digits">0123456789</item>
    </style>
</resources>